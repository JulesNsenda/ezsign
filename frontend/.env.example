# ==================================
# EzSign Frontend Environment Variables
# ==================================
# Copy this file to .env and update with your actual values
# IMPORTANT: Never commit .env file to version control

# ==================================
# API Configuration
# ==================================
VITE_API_URL=http://localhost:3001
VITE_API_VERSION=v1
VITE_API_TIMEOUT=30000

# ==================================
# Application
# ==================================
VITE_APP_NAME=EzSign
VITE_APP_TITLE=EzSign - Document Signing Platform
VITE_APP_DESCRIPTION=Open-source document signing platform

# ==================================
# Features
# ==================================
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true

# ==================================
# PDF Configuration
# ==================================
VITE_PDF_WORKER_SRC=/pdf.worker.min.js
VITE_PDF_MAX_FILE_SIZE=10485760
VITE_PDF_ALLOWED_EXTENSIONS=.pdf

# ==================================
# Upload Configuration
# ==================================
VITE_MAX_FILE_SIZE=10485760
VITE_CHUNK_SIZE=1048576

# ==================================
# UI Configuration
# ==================================
VITE_THEME=light
VITE_PRIMARY_COLOR=#3b82f6
VITE_ITEMS_PER_PAGE=10

# ==================================
# Authentication
# ==================================
VITE_TOKEN_STORAGE_KEY=ezsign_token
VITE_REFRESH_TOKEN_STORAGE_KEY=ezsign_refresh_token
VITE_USER_STORAGE_KEY=ezsign_user

# ==================================
# Development
# ==================================
VITE_MOCK_API=false
VITE_LOG_LEVEL=info
