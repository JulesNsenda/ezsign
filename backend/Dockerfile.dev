# Development Dockerfile for EzSign Backend
# Using Debian slim for better native module compatibility (canvas)
FROM node:20-slim AS development

# Install dumb-init and build dependencies for native modules (canvas)
RUN apt-get update && apt-get install -y --no-install-recommends \
    dumb-init \
    python3 \
    make \
    g++ \
    pkg-config \
    libcairo2-dev \
    libjpeg-dev \
    libpango1.0-dev \
    libgif-dev \
    libpixman-1-dev \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including devDependencies)
RUN npm ci

# Copy source code (can be overridden by volume mount)
COPY . .

# Create necessary directories
RUN mkdir -p storage logs

# Expose port and debugger port
EXPOSE 3001 9229

# Use dumb-init to handle signals properly
ENTRYPOINT ["dumb-init", "--"]

# Development command with hot reload
CMD ["npm", "run", "dev"]
